<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/widget_margin">

    <TextView
        android:id="@+id/appwidget_t1"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/gobutton"
        android:background="#09C"
        android:text="appwidget_t1"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/appwidget_t2"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/appwidget_t1"
        android:background="#09C"
        android:text="appwidget_t2"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/appwidget_text2"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/appwidget_t2"
        android:background="#09C"
        android:contentDescription="@string/appwidget_text"
        android:text="extra text "
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/gobutton"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="update"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_above="@+id/appwidget_t1"
        android:layout_toEndOf="@+id/gobutton"
        android:text="CayWidget"
        android:textColor="#ff0000"
        android:textSize="14sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/timebox"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_above="@+id/appwidget_t1"
        android:layout_toEndOf="@+id/title"
        android:text="timebox"
        android:textAlignment="textStart"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:textStyle="bold|italic" />

</RelativeLayout>